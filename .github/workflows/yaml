name: Build SPFx SPPKG
on:
  workflow_dispatch:
  push:
    branches: [ main, master ]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Use Node 16.x   # <â€” important for old deps like deasync
        uses: actions/setup-node@v4
        with:
          node-version: '16'
          cache: 'npm'

      - name: Build prerequisites
        run: |
          sudo apt-get update
          sudo apt-get install -y python3 g++ make
          npm config set python python3

      - name: Install dependencies
        run: npm ci || npm install

      - name: Bundle (production)
        run: npx gulp bundle --ship

      - name: Package solution
        run: npx gulp package-solution --ship

      - name: Upload .sppkg
        uses: actions/upload-artifact@v4
        with:
          name: sppkg
          path: sharepoint/solution/*.sppkg
